  	<center>
		<h1 class="hashtag"><a href="http://ctt.ec/1fUea" target="_blank">#allyqwedding</a></h1>
		<p class="join">(Use our wedding hashtag when you instagram so we can have all our pictures memories here!)</p>

		<br />
		<br />
		<% if @next_max_id.present? %>
			<%= link_to "Next Page", "/instagram?max_tag_id=#{@next_max_id}", class: "btn btn-lrg btn-success" %>
		<% else %>
			<%= link_to "Back To The Beginning", "/instagram", class: "btn btn-lrg btn-info" %>
		<% end %>	

	</center>
  
  <div id="ig-container" class="instas">
	    <% @tags.each do |t| %>
			<div class="insta">
				<div class="insta-inner">
		          	<div class="insta-user">
			            <%= link_to image_tag(t["user"]["profile_picture"]), "https://instagram.com/" + t["user"]["username"], target: "_blank" %>
			            <%= link_to t["user"]["username"], "https://instagram.com/" + t["user"]["username"], target: "_blank" %>
			            <%= link_to time_ago_in_words(Time.at(t["created_time"].to_i)) + " ago", "https://instagram.com/" + t["user"]["username"], target: "_blank", class: "pull-right"  %>
		          	</div>
					<div class="insta-img">
            			<%= link_to image_tag(t["images"]["standard_resolution"]["url"]), t["link"], target: "_blank" %>
		    		</div>
		    		<div class="insta-desc">
		              <% t["tags"].each do |i| %>
		              <%= link_to "#" + i, "https://instagram.com/explore/tags/#{i}", target: "_blank" %>
		              <% end %>
		    		</div>
				</div>
			</div>
	    <% end %>
	</div>

